#!/bin/sh

ABORT() {
	[ $# -gt 0 ] && echo 1>&2 $*
	exit 1
}

GFUSER=`gfwhoami`
[ X"$GFUSER" = X ] && ABORT 'Who?'
: ${USER:=`whoami`}
USERLIST="$GFUSER"
[ X"$GFUSER" != X"$USER" ] && USERLIST="$USERLIST $USER"

groups=`gfgroup -l | grep $GFUSER | awk -F: '{print $1}'`
for g in $groups
do
    for u in $USERLIST
    do
	d=/gfarm/$g/$u
	[ -d $d -o "`echo $d*`" = $d ] &&
	umount.gfarm2fs $d
    done
done
